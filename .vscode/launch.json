{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev", // Or 'yarn dev' or 'pnpm dev'
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://. +)", // Adjust pattern based on Next.js server output
        "uriFormat": "%s",
        "action": "debugWithChrome" // Or "debugWithEdge", etc.
      }
    }
  ]
}
